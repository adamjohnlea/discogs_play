{% extends "layouts/base.html.twig" %}

{% block title %}Welcome to {{ app_name }}{% endblock %}

{% block content %}
<div class="container landing-hero">
    <div class="row align-items-center">
        <div class="col-lg-6">
            <h1>Manage Your Discogs Collection</h1>
            <p class="lead">A beautiful way to browse, organize, and manage your vinyl collection through Discogs.</p>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4">
                <a href="/register" class="btn btn-primary btn-lg px-4 me-md-2">Get Started</a>
                <a href="/login" class="btn btn-outline-secondary btn-lg px-4">Login</a>
            </div>
            
            <div class="row g-4 py-4">
                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fa-solid fa-record-vinyl"></i>
                        </div>
                        <div class="feature-content">
                            <h5>Browse Your Collection</h5>
                            <p>View your entire Discogs collection with a modern, responsive interface.</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fa-solid fa-folder-open"></i>
                        </div>
                        <div class="feature-content">
                            <h5>Organize by Folders</h5>
                            <p>Keep your collection organized using Discogs folders.</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fa-solid fa-sort"></i>
                        </div>
                        <div class="feature-content">
                            <h5>Smart Sorting</h5>
                            <p>Sort your collection by artist, date added, and more.</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fa-solid fa-image"></i>
                        </div>
                        <div class="feature-content">
                            <h5>Cover Art</h5>
                            <p>Beautiful cover art display with gallery and list views.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6">
            <div class="preview-card">
                <i class="fa-solid fa-record-vinyl"></i>
                <h3>Your Collection Awaits</h3>
            </div>
        </div>
    </div>
</div>
{% endblock %} 