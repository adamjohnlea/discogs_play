<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=.8">
    <title>{% block title %}{% if releaseInfo is defined %}{{ releaseInfo.title }} by {{ releaseInfo.artists[0].name|clean_artist_name }} | {% endif %}My Discogs Collection{% endblock %}</title>
    
    <script src="https://kit.fontawesome.com/7e1a0bb728.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <!-- Dark theme -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-night.min.css" rel="stylesheet">
    <!-- Command Palette -->
    <link href="/css/command-palette.css" rel="stylesheet">
    <!-- Modern Pagination -->
    <link href="/css/modern-pagination.css" rel="stylesheet">
    <!-- Theme -->
    <link href="/css/theme.css" rel="stylesheet">
    <!-- Cards -->
    <link href="/css/cards.css" rel="stylesheet">
    <!-- Tables -->
    <link href="/css/tables.css" rel="stylesheet">
    <!-- Carousel -->
    <link href="/css/carousel.css" rel="stylesheet">
    <!-- Forms -->
    <link href="/css/forms.css" rel="stylesheet">
    <!-- Profile -->
    <link href="/css/profile.css" rel="stylesheet">
    <!-- Banner -->
    <link href="/css/banner.css" rel="stylesheet">
    <!-- Landing -->
    <link href="/css/landing.css" rel="stylesheet">
    <!-- Password Requirements -->
    <link href="/css/password-requirements.css" rel="stylesheet">
    <!-- Release -->
    <link href="/css/release.css" rel="stylesheet">
    <!-- Modern Header -->
    <link href="/css/modern-header.css" rel="stylesheet">
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div class="container-fluid">
        {% block banner %}
            {% include 'partials/modern_header.html.twig' %}
            
            {% if collection is defined %}
                {% block nav %}
                    {% include 'partials/top_nav_filter_bar.html.twig' %}
                {% endblock %}
            {% endif %}
        {% endblock %}

        {% block content %}{% endblock %}

        {% block footer %}
            {% include 'partials/footer.html.twig' %}
        {% endblock %}
    </div>

    {% block javascripts %}{% endblock %}

    <!-- Command Palette -->
    <script src="/js/command-palette.js"></script>
    
    <!-- Password Validation -->
    <script src="/js/password-validation.js"></script>
    
    <!-- Current state data for command palette -->
    {% if folder_id is defined %}
        <div hidden data-current-folder="{{ folder_id }}"></div>
    {% endif %}
    {% if page is defined %}
        <div hidden data-current-page="{{ page }}"></div>
    {% endif %}
    {% if sort_by is defined %}
        <div hidden data-current-sort="{{ sort_by }}"></div>
    {% endif %}
    {% if order is defined %}
        <div hidden data-current-order="{{ order }}"></div>
    {% endif %}
    {% if per_page is defined %}
        <div hidden data-per-page="{{ per_page }}"></div>
    {% endif %}
    
    <!-- Folder data for command palette -->
    {% if folders is defined %}
        {% for folder in folders.folders %}
            {% if folder.count >= 1 %}
                <div hidden 
                     data-folder-id="{{ folder.id }}"
                     data-folder-name="{{ folder.name }}"
                     data-folder-count="{{ folder.count }}">
                </div>
            {% endif %}
        {% endfor %}
    {% endif %}
</body>
</html> 