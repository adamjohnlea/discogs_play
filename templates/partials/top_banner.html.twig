<div class="row">
    <div class="col-12 mx-auto my-1">
        <div class="text-white p-3 shadow-sm rounded banner">
            {% if not release_id %}
                <h2 class="display-6">My Discogs Collection</h2>
                {% if discogs_username is defined %}
                    <p>Discogs Username: <a href="https://www.discogs.com/user/{{ discogs_username }}" class="text-decoration-none">{{ discogs_username }}</a></p>
                {% endif %}

                {% if current_folder_name is defined %}
                    <p class="lead mb-0">
                        <span class="fw-bold">{{ current_folder_name }}</span>
                        {% if current_folder_count is defined %}
                            <span class="text-muted">({{ current_folder_count }} items)</span>
                        {% endif %}
                        {% if sort_by is defined and order is defined %}
                            â€¢ Sorted by {{ sort_by == 'added' ? 'date added' : sort_by }} 
                            <i class="fa-solid fa-arrow-{{ order == 'asc' ? 'up' : 'down' }} text-muted"></i>
                        {% endif %}
                    </p>
                {% endif %}
            {% else %}
                {% if releaseInfo is defined and releaseInfo %}
                    <h2 class="display-6">
                        "{{ releaseInfo.title }}"
                        {% if releaseInfo.artists is defined and releaseInfo.artists %}
                            by {{ releaseInfo.artists|map(a => a.name|clean_artist_name)|join(', ') }}
                        {% endif %}
                    </h2>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div> 