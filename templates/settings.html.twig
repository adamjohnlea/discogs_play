{% extends "layouts/base.html.twig" %}

{% block title %}Settings - {{ app_name }}{% endblock %}

{% block content %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Discogs Settings</h4>
                </div>
                <div class="card-body">
                    {% if success %}
                        <div class="alert alert-success">
                            {{ success }}
                        </div>
                    {% endif %}

                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error }}
                        </div>
                    {% endif %}

                    <form method="POST" action="/settings">
                        <div class="mb-4">
                            <label for="discogs_username" class="form-label">Discogs Username</label>
                            <input type="text" class="form-control" id="discogs_username" name="discogs_username" 
                                   value="{{ settings.discogs_username ?? '' }}" required>
                            <div class="form-text">Your Discogs.com username</div>
                        </div>

                        <div class="mb-4">
                            <label for="discogs_token" class="form-label">Discogs Personal Access Token</label>
                            <input type="password" class="form-control" id="discogs_token" name="discogs_token" 
                                   value="{{ settings.discogs_token ?? '' }}" required>
                            <div class="form-text">
                                Generate a personal access token in your 
                                <a href="https://www.discogs.com/settings/developers" target="_blank" rel="noopener">
                                    Discogs Developer Settings
                                </a>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Save Settings</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h4 class="mb-0">Collection Management</h4>
                </div>
                <div class="card-body">
                    <form method="POST" action="/refresh-collection">
                        <p class="text-muted">Your collection is automatically cached for 24 hours to improve performance. Click the button below to manually refresh your collection data from Discogs.</p>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-secondary">
                                <i class="fa-solid fa-sync"></i> Refresh Collection Data
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h4 class="mb-0">Help</h4>
                </div>
                <div class="card-body">
                    <h5>How to get your Discogs credentials:</h5>
                    <ol class="mb-0">
                        <li>Go to <a href="https://www.discogs.com" target="_blank" rel="noopener">Discogs.com</a> and sign in</li>
                        <li>Visit your <a href="https://www.discogs.com/settings/developers" target="_blank" rel="noopener">Developer Settings</a></li>
                        <li>Generate a new personal access token</li>
                        <li>Copy your username and token to the form above</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 